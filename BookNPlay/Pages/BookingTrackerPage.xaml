<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookNPlay.Pages.BookingTrackerPage"
             xmlns:vm="clr-namespace:BookNPlay.ViewModels"
             Title="BookingTrackerPage">

    <ContentPage.BindingContext>
        <!-- Set the BindingContext to BookingTrackerViewModel -->
        <vm:BookingTrackerViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label 
                Text="Booking Tracker"
                FontSize="24"
                HorizontalOptions="Center" 
                VerticalOptions="Start" />

            <CollectionView x:Name="BookingsCollectionView"
                            ItemsSource="{Binding Booking}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <!-- Add labels for each field -->

                                <!-- Label for Booking ID -->
                                <Label Text="Booking ID:" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="{Binding Id}" FontSize="16" />

                                <!-- Label for UserName -->
                                <Label Text="User Name:" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="{Binding UserName}" FontSize="16" />

                                <!-- Label for Facility Name -->
                                <Label Text="Facility Name:" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="{Binding FacilityName}" FontSize="14" />

                                <!-- Label for Date -->
                                <Label Text="Booking Date:" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}" FontSize="14" />

                                <!-- Label for Time Slot -->
                                <Label Text="Time Slot:" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="{Binding Time}" FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
