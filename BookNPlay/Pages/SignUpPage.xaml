<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BookNPlay.ViewModels"
             x:Class="BookNPlay.Pages.SignUpPage"
             BackgroundColor="#ffffff"
             Title="SignUpPage">

    <ContentPage.BindingContext>
        <local:SignUpViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center">

            <!-- App Logo -->
            <Image 
                Source="bnplogo.png" 
                SemanticProperties.Description="App logo"
                HeightRequest="300"
                HorizontalOptions="Center"
                />

            <!-- Welcome Text -->
            <Label 
                x:Name="WelcomeLabel"
                Text ="Create A User Account"
                FontFamily="Montserrat"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="#001f3f"
                HorizontalOptions="Center" />
            
            <!-- Username Entry -->
            <Entry 
                x:Name="UsernameEntry"
                Placeholder="Username"
                FontSize="18"
                BackgroundColor="Transparent"
                TextColor="#001f3f"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                Margin="0,10,0,0"
                Text="{Binding User.Username}" />
            <Label Text="Required: 1-20 characters. " 
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Start"/>

            <!-- Email Entry -->
            <Entry 
                x:Name="EmailEntry"
                Placeholder="Email"
                FontSize="18"
                BackgroundColor="Transparent"
                TextColor="#001f3f"
                HeightRequest="40"
                Text="{Binding User.Email}"
                PlaceholderColor="Gray"
                HorizontalOptions="FillAndExpand"/>
            <Label Text="Required: Valid email format."
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Start"/>

            <!-- Password Entry -->
            <Entry 
                x:Name="PasswordEntry"
                Placeholder="Password"
                FontSize="18"
                IsPassword="True"
                BackgroundColor="Transparent"
                TextColor="#001f3f"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                Text="{Binding User.Password}"
                PlaceholderColor="Gray"/>
            <Label Text="Required:Min 6 chars, 1 uppercase, 1 lowercase, 1 digit, 1 special character."
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Start"/>

            <!-- Confirm Password Entry -->
            <Entry 
                x:Name="ConfirmPasswordEntry"
                Placeholder="Confirm Password"
                FontSize="18"
                IsPassword="True"
                BackgroundColor="Transparent"
                TextColor="#001f3f"
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                Text="{Binding User.ConfirmPassword}"
                PlaceholderColor="Gray"/>
            <Label Text="Required: Must match password"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Start"/>

            <!-- Sign Up Button -->
            <Button 
                x:Name="SignUpButton"
                Text="Sign Up"
                FontSize="20"
                FontFamily="Roboto"
                TextColor="White"
                Command="{Binding SignUpCommand}"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand"
                CornerRadius="10">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#001f3f" Offset="0.0" />
                        <GradientStop Color="#48997e" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            
            <!-- Link to Login Page-->
            <Label 
                Text="Already have an account?"
                FontSize="14"
                TextColor="#007AFF"
                HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                </Label.GestureRecognizers>
            </Label>

            <!--Feedback Label -->
            <Label 
                x:Name="FeedbackLabel"
                FontSize="16"
                TextColor="{Binding FeedbackColor}"
                HorizontalOptions="Center"
                Text="{Binding Feedback}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>