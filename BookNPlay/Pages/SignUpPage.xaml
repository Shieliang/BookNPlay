<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BookNPlay.ViewModels"
             x:Class="BookNPlay.Pages.SignUpPage"
             BackgroundColor="#F4F4F4"
             Title="SignUpPage">

    <ContentPage.BindingContext>
        <local:SignUpViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30,60"
            VerticalOptions="Center">

            <!-- Username Entry -->
            <Entry
                Placeholder="Username"
                FontSize="18"
                BackgroundColor="White"
                TextColor="Black"
                HeightRequest="40"
                Text="{Binding User.Username}"
                HorizontalOptions="FillAndExpand"
                Margin="0,20,0,0"/>
            <Label Text="Required: 1-20 characters." 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalOptions="Start" />

            <!-- Email Entry -->
            <Entry
                Placeholder="Email Address"
                FontSize="18"
                BackgroundColor="White"
                TextColor="Black"
                HeightRequest="40"
                Text="{Binding User.Email}"
                HorizontalOptions="FillAndExpand" />
            <Label Text="Required: Valid email format." 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalOptions="Start" />

            <!-- Password Entry -->
            <Entry
                Placeholder="Password"
                FontSize="18"
                IsPassword="True"
                BackgroundColor="White"
                TextColor="Black"
                HeightRequest="40"
                Text="{Binding User.Password}"
                HorizontalOptions="FillAndExpand"/>
            <Label Text="Required: Min 6 chars, 1 uppercase, 1 lowercase, 1 digit, 1 special character." 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalOptions="Start" />

            <!-- Confirm Password Entry -->
            <Entry
                Placeholder="Confirm Password"
                FontSize="18"
                IsPassword="True"
                BackgroundColor="White"
                TextColor="Black"
                HeightRequest="40"
                Text="{Binding User.ConfirmPassword}"
                HorizontalOptions="FillAndExpand"/>
            <Label Text="Required: Must match password." 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalOptions="Start" />

            <!-- Sign Up Button -->
            <Button
                Text="Sign Up"
                FontSize="20"
                BackgroundColor="#4CAF50"
                TextColor="White"
                HeightRequest="50"
                Command="{Binding SignUpCommand}"
                HorizontalOptions="FillAndExpand"
                CornerRadius="10"/>

            <Label
                Text="Already have an account?"
                FontSize="14"
                TextColor="#007AFF"
                HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                </Label.GestureRecognizers>
            </Label>

            <!-- Feedback Label -->
            <Label
                FontSize="16"
                TextColor="{Binding FeedbackColor}"
                HorizontalOptions="Center"
                Text="{Binding Feedback}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
