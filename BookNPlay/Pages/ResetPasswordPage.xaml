<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookNPlay.Pages.ResetPasswordPage"
             xmlns:vm="clr-namespace:BookNPlay.ViewModels"
             Title="ResetPasswordPage">

    <ContentPage.BindingContext>
        <!-- Update BindingContext to use ResetPasswordViewModel -->
        <vm:ResetPasswordViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login Page"
        Command="{Binding NavigateToLoginCommand}" />
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="Enter your email to reset your password" />
            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" Text="{Binding Email}" />
            <Button Text="Reset Password" Command="{Binding ResetPasswordCommand}" />
            <Label Text="{Binding Feedback}" TextColor="{Binding FeedbackColor}" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
