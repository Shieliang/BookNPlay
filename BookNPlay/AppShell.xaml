<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookNPlay.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookNPlay.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate local:SignUpPage}"
        Route="SignUpPage"/>

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:Dashboard}"
        Route="Dashboard"/>

    <!-- Add Facility Listing Page -->
    <ShellContent
        Title="Facility Listing"
        ContentTemplate="{DataTemplate local:FacilityListing}"
        Route="FacilityListing"/>
    
    <ShellContent
        Title="Facility Listing"
        ContentTemplate="{DataTemplate local:FacilityListingPage}"
        Route="FacilityListingPage"/>

</Shell>